
<form class="input-group mb-3" action="/forum/search" action="GET">
  <input type="text" class="form-control" placeholder="Keyword......" aria-label="Recipient's username"
    aria-describedby="button-addon2" name="keyword">
  <button class="btn btn-secondary" type="submit" id="button-addon2">Search</button>
</form>

{{#if comments}}
<section class="index-section">
  <ul class="list-group">
    {{#each comments}}
      <li class="list-group-item d-flex justify-content-between">
        <img class="w-25 mx-3 d-none d-lg-block" src="{{this.image}}" alt="image">
        <div class="flex-grow-1">
          <h5>{{this.title}}</h5>
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <p>{{this.brief_comment}}</p>
              <p class="text-secondary">{{this.brief_updated_at}}</p>
            </div>
            <a href="/forum/{{this._id}}/detail" class="btn btn-info text-light align-self-end">Detail</a>
          </div>
        </div>
      </li>
    {{/each}}
  </ul>
</section>
{{else}}
  <h1>No Result Found</h1>
{{/if}}

<a href="/forum/comment" class="btn btn-primary w-100 mt-3">Comment</a>
